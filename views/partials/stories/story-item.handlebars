
<div class="story-div">
  <h3 class="headline" data-id="{{_id}}">
    {{headline}}
  </h3>

  <p class="summary">
    {{summary}}
  </p>
  <div>
    <p class="story-date">
      {{storyDate}}
    </p>
    <a class="story-link" href="{{link}}" target="_blank">LA Times Story Link</a>
  </div>
  <button type="button" class="btn btn-primary comment-btn" data-story-id="{{_id}}">Comments</button>
</div>